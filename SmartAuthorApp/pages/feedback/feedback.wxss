.placeholder{
    margin: 5px;
    padding: 0 10px;
    text-align: center;
    background-color: #EBEBEB;
    height: 2.3em;
    line-height: 2.3em;
    color: #cfcfcf;
}

.ques-title { 
  font-size: 36rpx;
  margin-left: 10rpx;
}
.ques-panel { 
  flex-direction: row;
  display: flex; 
  flex-wrap: wrap;
}
.ques-default { 
  color: #999;
  border: 1rpx solid #ccc; 
  border-radius: 8rpx;
  font-size: 36rpx; 
  height: 56rpx;
  margin: 10rpx;
  padding: 6rpx 12rpx;
}

.ques-active { 
  border: 1rpx solid #ccc; 
  border-radius: 8rpx;
  background-color: #ccc;
  color: white;
  font-size: 36rpx; 
  height: 56rpx;
  margin: 10rpx;
  padding: 6rpx 12rpx;
}

.ques-con-panel { 
  margin: 30rpx 20rpx 20rpx 20rpx; 
  border: 0px; 
  border-radius: 20rpx; 
  background-color: #F6F6F6; 
}
.ques-con-title { 
  text-align: center; 
  color: #333; 
  font-size: 35rpx; 
  height: 360rpx; 
}

.text-line{
  height: 1px;
  background-color: #eee;
  margin-top: 20rpx;
}

.ques-con-content-panel{
  margin: 6rpx 20rpx;
}

.ques-con-content{
  height: 260rpx;
  word-wrap: break-word;
  text-align: left;
  width: 100%;
  font-size: 30rpx;
}
.post-panel{
  margin-top: 40rpx;
  text-align: right;
}
.post-btn{
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #0594D8;
  color: white;
  position: relative;
  margin-right: 0;
}

.msg-panel{
  margin-top: 150rpx;
}

.msg-title{
  margin-top: 150rpx;
  font-size: 32rpx;
  color: #ccc;
  margin-left: 20rpx;
}

.msg-content{
  font-size: 22rpx;
  color: #ccc;
  margin-left: 20rpx;
  line-height: 30rpx;
  display: block;
}

.area-line{
  border: 0;
  height: 1px;
  background-color: #eee;
  margin: 30rpx 30rpx;
}

.msg-panel-bottom{
  margin-top: -20rpx;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius: 10rpx;
}

.modal-title {
  padding-top: 20rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
  background-color: #F7F7F7;
}

.modal-content {
  padding: 10rpx 32rpx;
  font-size: 30rpx;
  text-align: center;
  color: #999;
}
.close-btn { position: absolute; right: 20rpx; top: 5rpx; }
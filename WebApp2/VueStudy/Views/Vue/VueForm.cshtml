
@{
    ViewData["Title"] = "VueForm";
}
<hr />
<div id="app1">
    <p>input 元素：</p> <input v-model="message" placeholder="编辑消息" /><br />
    <p>消息是：{{ message }}</p>
    <br />
    <p>input Lazy元素：</p> <input v-model.lazy="message3" placeholder="编辑消息2" /><br />
    <p>消息是：{{ message3 }}</p>
    <br />
    <p>input Number元素：</p> <input type="number" v-model.number="message4" placeholder="请输入数字" /><br />
    <p>消息是：{{ message4 }}</p>
    <br />
    <p>textarea 元素：</p>
    <p style="white-space: pre">{{ message2 }}</p>
    <textarea v-model="message2" placeholder="多行文件消息"></textarea>
</div>
<hr />
<div id="app2">
    <p>单个复选框：</p>
    <input type="checkbox" id="checkbox" v-model="checked" />
    <label for="checkbox">{{ checked }}</label>
    <br />

    <p>多个复选框：</p>
    <input type="checkbox" id="runoob" value="Runoob" v-model="checkedNames" /><label for="runoob">Runoob</label>
    <input type="checkbox" id="google" value="Google" v-model="checkedNames">
    <label for="google">Google</label>
    <input type="checkbox" id="taobao" value="Taobao" v-model="checkedNames">
    <label for="taobao">taobao</label>
    <br />
    <span>选择的值为：{{ checkedNames }}</span>
</div>
<hr />
<div id="app3">
    <input type="radio" id="rd1" value="Runoob" v-model="picked" /><label for="rd1">Runoob</label>
    <br />
    <input type="radio" id="rd2" value="Google" v-model="picked" /><label for="rd2">Google</label>
    <br>
    <span>选中值为: {{ picked }}</span>
</div>
<hr />
<div id="app4">
    <select v-model="selected" name="fruit" multiple>
        <option value="">选择一个网站</option>
        <option value="www.runoob.com">Runoob</option>
        <option value="www.google.com">Google</option>
    </select>
    <br />
    <div id="output">
        选择的网站是: {{selected}}
    </div>

</div>


@section scripts{
    <script src="~/lib/vue/vue.min.js"></script>

    <script>
        var vue1 = new Vue({
            el: "#app1",
            data: {
                message: 'Runoob',
                message2: "消息2",
                message3: '',
                message4:''
            }
        });

        var vue2 = new Vue({
            el: "#app2",
            data: {
                checked: false,
                checkedNames:[]
            }
        });

        var vue3 = new Vue({
            el: "#app3",
            data: {
                picked:[]
            }
        });

        var vue4 = new Vue({
            el: "#app4",
            data: {
                selected:[]
            }
        });
    </script>
}
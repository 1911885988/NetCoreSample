
@{
    ViewData["Title"] = "VueCircle";
}
<hr />
<div id="app1">
    <ol>
        <li v-for="site in sites">
            {{site.name}}
        </li>
    </ol>
</div>
<hr />
<div id="app2">
    <ul>
        <template v-for="site in sites">
            <li>{{ site.name }}</li>
            <li>--------------</li>
        </template>
    </ul>
</div>
<hr />
<div id="app3">
    <ul>
        <li v-for="value in object">
            {{ value }}
        </li>
    </ul>
</div>
<hr />
<div id="app4">
       <ul>
           <li v-for="(value,key) in object">
               {{ key }}:{{value}}
           </li>
       </ul>
</div>
<hr />
<div id="app5">
    <ul>
        <li v-for="(value,key,index) in object">
            {{index}}.{{ key }}:{{value}}
        </li>
    </ul>
</div>

<div id="app6">
    <ul>
        <li v-for="n in 10">
            {{ n }}
        </li>
    </ul>
</div>

